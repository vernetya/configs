{
  "explorer.confirmDelete": false,
  "debug.allowBreakpointsEverywhere": true,
  "files.autoSaveDelay": 4000,
  "editor.formatOnSave": true,
  "rust.all_features": true,
  "taskExplorer.enableSideBar": true,
  "taskExplorer.showExecuteWithArgumentsButton": true,
  "taskExplorer.showExecuteWithNoTerminalButton": true,
  "json.format.enable": false,
  "workbench.iconTheme": "Monokai Pro (Filter Machine) Icons",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "editor.lineNumbers": "on",
  "rust-analyzer.debug.engine": "vadimcn.vscode-lldb",

  "rust-analyzer.inlayHints.discriminantHints.enable": "never",
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.bindingModeHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "never",
  "rust-analyzer.inlayHints.expressionAdjustmentHints.enable": "never",
  "rust-analyzer.inlayHints.expressionAdjustmentHints.hideOutsideUnsafe": false,
  "rust-analyzer.inlayHints.expressionAdjustmentHints.mode": "prefix",
  "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "never",
  "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": false,
  "rust-analyzer.inlayHints.maxLength": 25,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.reborrowHints.enable": "never", //"always", "mutable"
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.hideClosureInitialization": true,
  "rust-analyzer.inlayHints.typeHints.hideNamedConstructor": true,
  "rust-analyzer.inlayHints.closingBraceHints.minLines": 25,
  "rust-analyzer.inlayHints.renderColons": false,

  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "editorInlayHint.foreground": "#868686f0",
      "editorInlayHint.background": "#3d3d3d48",
      "editorInlayHint.typeForeground": "#868686f0",
      "editorInlayHint.typeBackground": "#3d3d3d48",
      "editorInlayHint.parameterForeground": "#868686f0",
      "editorInlayHint.parameterBackground": "#3d3d3d48"
    },
    "statusBar.background": "#8FBCBB",
    "statusBar.noFolderBackground": "#8FBCBB",
    "statusBar.debuggingBackground": "#8FBCBB",
    "statusBar.foreground": "#434C5E",
    "statusBar.debuggingForeground": "#434C5E"
  },
  "editor.cursorSurroundingLines": 8,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 800,
  "vim.surround": true,
  "vim.showcmd": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
  "vim.statusBarColors.insert": "#BF616A",
  "vim.statusBarColors.visual": "#B48EAD",
  "vim.statusBarColors.visualline": "#B48EAD",
  "vim.statusBarColors.visualblock": "#A3BE8C",
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#007ACC",
  "vim.statusBarColors.searchinprogressmode": "#007ACC",
  "vim.statusBarColors.easymotionmode": "#007ACC",
  "vim.statusBarColors.easymotioninputmode": "#007ACC",
  "vim.statusBarColors.surroundinputmode": "#007ACC",
  "vim.highlightedyank.color": "rgba(213, 15, 255, 0.5)",
  "vim.leader": "<space>",
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": [ "<leader>", "/" ], "commands": [ "editor.action.commentLine" ] },
    // { "before": [ "J" ], "commands": [ "editor.action.moveLinesDownAction" ] },
    // { "before": [ "K" ], "commands": [ "editor.action.moveLinesUpAction" ] },
    // paste over selection, previous copied to void insert register
    { "before": [ "<leader>", "p"], "after": ["\"", "_", "d", "P" ]},
  ],
  "vim.insertModeKeyBindings": [
    { "before": [ "j", "j" ], "after": [ "<Esc>" ] },
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
    // lazyvim shortcuts
    // FOCUS, using CTRL+f instead of <leader>f because of various issue inside VSCode
    // those shortcut are defined inside keybindings.json if VSCode
    // { "before": [ "<C-f>", "e" ], "commands": [ "workbench.files.action.focusFilesExplorer" ] },
    // { "before": [ "<C-f>", "t" ], "commands": [ "workbench.action.terminal.focus" ] },
    // { "before": [ "<C-f>", "g" ], "commands": [ "workbench.view.scm" ] },

    { "before": ["L"], "after": ["$"] },
    { "before": ["H"], "after": ["^"] },

    { "before": [":"], "commands": [ "workbench.action.showCommands" ], "silent": true },

    { "before": ["K"], "commands": [ "lineBreakInsert" ], "silent": true },
    
    { "before": [ "<leader>", "d" ], "after": [ "\"", "_", "d" ] },
    { "before": [ "<leader>", "f", "s" ], "commands": [ "workbench.action.findInFiles" ] },
    { "before": [ "<leader>", "f", "r" ], "commands": [ "references-view.findReferences" ] },
    { "before": [ "<leader>", "f", "f" ], "commands": [ "workbench.action.quickOpen" ] },
    { "before": [ "<leader>", "p"], "after": ["v", "i", "w", "\"", "_", "d", "P" ]},
    { "before": [ "<leader>", "P"], "after": ["v", "i", "W", "\"", "_", "d", "P" ]},
    { "before": [ "]", "g" ], "commands": [ "editor.action.marker.next" ] },
    { "before": [ "[", "g" ], "commands": [ "editor.action.marker.prev" ] },
    { "before": [ "<leader>", "g" ], "commands": [ "workbench.action.gotoLine" ] },
    { "before": [ "<leader>", "right" ], "commands": [ "workbench.action.nextEditor" ] },
    { "before": [ "<leader>", "left" ], "commands": [ "workbench.action.previousEditor" ] },
    { "before": [ "U" ], "after": [ "<C-R>" ] },
    // { "before": [ "<leader>", "/" ], "commands": [ "editor.action.commentLine" ] },
    { "before": [ "<leader>", "h" ], "commands": [ ":nohl" ] },
    { "before": [ "<C-k>" ], "commands": [ "editor.action.showHover" ] },
    // { "before": [ "<C-h>" ], "after": [ "^" ] },
    // { "before": [ "<C-l>" ], "after": [ "$" ] },

    { "before": [ "<leader>", "<leader>", "s" ], "after":  [ "<leader>", "<leader>", "2", "s" ]},
    // bookmarking
    { "before": [ "<leader>", "1" ], "commands": [ "numberedBookmarks.jumpToBookmark1" ] },
    { "before": [ "<leader>", "2" ], "commands": [ "numberedBookmarks.jumpToBookmark2" ] },
    { "before": [ "<leader>", "3" ], "commands": [ "numberedBookmarks.jumpToBookmark3" ] },
    { "before": [ "<leader>", "4" ], "commands": [ "numberedBookmarks.jumpToBookmark4" ] },
    { "before": [ "<leader>", "m", "1" ], "commands": [ "numberedBookmarks.toggleBookmark1" ] },
    { "before": [ "<leader>", "m", "2" ], "commands": [ "numberedBookmarks.toggleBookmark2" ] },
    { "before": [ "<leader>", "m", "3" ], "commands": [ "numberedBookmarks.toggleBookmark3" ] },
    { "before": [ "<leader>", "m", "4" ], "commands": [ "numberedBookmarks.toggleBookmark4" ] },
  ],
  "numberedBookmarks.navigateThroughAllFiles": "replace",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
}